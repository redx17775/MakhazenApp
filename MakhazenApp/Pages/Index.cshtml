@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center">
    <h1 class="display-5 fw-bold mb-3">Welcome to Makhazen</h1>
    <p class="lead">Your Warehouse Management System.</p>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total Products</h5>
                    <p class="fs-4 fw-semibold">@Model.ProductCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Categories</h5>
                    <p class="fs-4 fw-semibold">@Model.CategoryCount</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8 offset-md-2">
            <h4>Products by Category</h4>
            <table class="table table-sm">
                <thead><tr><th>Category</th><th>Count</th><th>Avg Price</th></tr></thead>
                <tbody>
                    @foreach (var g in Model.ProductGroupByCategory)
                    {
                        <tr>
                            <td>@g.GetType().GetProperty("Category")?.GetValue(g)</td>
                            <td>@g.GetType().GetProperty("Count")?.GetValue(g)</td>
                            <td>@String.Format("{0:C}", g.GetType().GetProperty("AvgPrice")?.GetValue(g))</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
