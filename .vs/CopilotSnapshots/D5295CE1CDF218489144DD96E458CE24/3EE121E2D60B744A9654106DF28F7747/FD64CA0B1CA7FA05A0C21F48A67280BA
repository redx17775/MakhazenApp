using Microsoft.AspNetCore.Mvc.RazorPages;
using Makhazen.Models;
using Microsoft.Data.SqlClient;
using System.Data;

public class ProductsModel : PageModel
{
    private readonly IConfiguration _config;
    public ProductsModel(IConfiguration config) { _config = config; }

    public IEnumerable<Product> Products { get; set; } = Enumerable.Empty<Product>();
    public string? ErrorMessage { get; set; }

    public void OnGet()
    {
        var list = new List<Product>();
        try
        {
            using var conn = new SqlConnection(_config.GetConnectionString("DefaultConnection"));
            using var cmd = new SqlCommand("SELECT ProductID, ProductName, ItemCode, (SELECT CategoryName FROM Category WHERE CategoryID = p.CategoryID) AS CategoryName, Quantity, Price, ImageURL FROM Product p", conn);
            conn.Open();
            using var r = cmd.ExecuteReader();
            while (r.Read())
            {
                list.Add(new Product
                {
                    Id = r.GetInt32(0),
                    Name = r.GetString(1),
                    Code = r.GetString(2),
                    Category = r.IsDBNull(3) ? string.Empty : r.GetString(3),
                    Stock = r.GetInt32(4),
                    Price = r.GetDecimal(5),
                    PhotoUrl = r.IsDBNull(6) ? null : r.GetString(6)
                });
            }
            Products = list;
        }
        catch (Exception ex)
        {
            ErrorMessage = "Failed to load products: " + ex.Message;
        }
    }
}
