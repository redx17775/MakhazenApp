@page
@model AddProductModel
@{
    ViewData["Title"] = "Add Product";
}

<h2>Add Product</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-success">@Model.Message</div>
}
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<form method="post" class="row g-3 needs-validation" novalidate>
    <div class="col-md-6">
        <label asp-for="Product.Name" class="form-label"></label>
        <input asp-for="Product.Name" class="form-control" />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Product.Code" class="form-label"></label>
        <input asp-for="Product.Code" class="form-control" />
        <span asp-validation-for="Product.Code" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Product.Category" class="form-label"></label>
        <select asp-for="Product.Category" class="form-select">
            <option value="">Select</option>
            @foreach (var c in Model.Categories)
            {
                <option value="@c.Name">@c.Name</option>
            }
        </select>
        <span asp-validation-for="Product.Category" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Product.Price" class="form-label"></label>
        <input asp-for="Product.Price" class="form-control" />
        <span asp-validation-for="Product.Price" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Product.Stock" class="form-label"></label>
        <input asp-for="Product.Stock" class="form-control" />
        <span asp-validation-for="Product.Stock" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- Optionally mount a React form enhancement (preview, client validation) -->
    <div id="react-addproduct-root"></div>
